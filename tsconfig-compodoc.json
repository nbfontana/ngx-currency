    "target": "ES5",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "dom"
    ],
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "demo",
    "test",
    "karma.conf.ts",
    "webpack.config.ts",
    "webpack.config.umd.ts"
  ]
}
